{
  "name": "aelin-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "Aelin Desktop wrapper for MercuryDesk",
  "main": "src/main.cjs",
  "scripts": {
    "dev": "cross-env MERCURYDESK_DESKTOP_DEV=1 electron .",
    "build:backend": "node ./scripts/build-backend.cjs",
    "build:frontend": "npm --prefix ../frontend run build",
    "prepare:pack": "node ./scripts/prepare-pack.cjs",
    "pack": "npm run prepare:pack && electron-builder --dir --config.directories.output=release-fast",
    "dist": "npm run prepare:pack && electron-builder --config.directories.output=release-dist",
    "verify:dist": "node ./scripts/verify-installer.cjs",
    "dist:checked": "npm run dist && npm run verify:dist",
    "pack:full": "npm run build:backend && npm run build:frontend && npm run pack",
    "dist:full": "npm run build:backend && npm run build:frontend && npm run dist",
    "dist:full:checked": "npm run dist:full && npm run verify:dist"
  },
  "dependencies": {
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ttawdtt.aelin",
    "productName": "Aelin",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend-dist"
      },
      {
        "from": "../backend/dist/aelin-backend",
        "to": "backend-runtime",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "differentialPackage": false
    }
  }
}
